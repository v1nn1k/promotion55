body,
html
	min-height 100vh
	margin 0
	padding 0
	max-height: 100vh
	

body
	display flex
	justify-content center
	align-items center
	flex-direction column
	background-color #39428c
	background-color: #19a2c3
	font-family 'Open Sans', sans-serif
	max-height: 100vh

.form
	width 580px
	height 480px
	margin 10px
	background-color #39428c
	background-color: #19a2c3
	
	display flex
	color white
	flex-direction column
	position relative
	&.hidden
		display: none

.form__label
	margin: 100px auto 0
	text-align center
	font-size 27px		
	transition: all .15s ease
	font-weight: 300;
	
	
	&--green
		color: #99ff99
.form__label--small
	margin-top 20px
	text-align center
	font-size .9em
	cursor pointer
	margin-bottom 20px
	font-weight: 300;
	


.form__label--nopointer
	position: absolute
	pointer-events: none
	text-align: center
	top: 32px
	left: 23%
	margin: 0
	font-weight: 300;
	
	
.form__label--light
	font-size: 17px
	position: absolute
	left: 8%
	top: 19%
	font-weight: 300;
	

.container
	display: flex
	flex-direction: column
	justify-content: center
	width 90%
	position: relative
	margin 50px auto 0

	&--textinput
		margin 150px auto 0
		

.form__radio
	top 47%
	left 25%

.form__textinput
	width 85%
	margin 30px auto 60px
	border none
	background-color #39428c
	background-color: #19a2c3
	
	font-size 27px
	text-align: center
	color #fafafa
	padding-left 0px
	padding: 0
	border-bottom 1.5px solid #fff
	font-weight: 300
	font-family 'Open Sans', sans-serif
	&:focus
		outline none

	&:focus ~ .form__label
		font-size: 12px
		top: 0px
		left: 7.5%
	&:focus ~ #promotion-5 .container .form__label
		font-size 12px
		top: 0px
		left: 7.5%

.btn
	width 150px
	height 40px
	text-align center
	margin 0 auto 15px
	background-color #6699ff
	border none
	color #fff
	font-size 1em
	font-weight 300
	cursor pointer
	&:hover
		background-color #99ff99
		transition .2s all
		//background-color: #19c38f

	&--negative
		background-color #D7453F
		cursor default
		&:hover
			background-color #D7453F
			

.form__trigger
	display flex
	width 70%
	margin 0 auto

.btn-trigger
	width 100px
	font-size 1.2em

.form__discount
	width 250px
	height 51px
	margin 150px auto 0
	position relative
	margin-bottom: -100px
	

.discount-left,
.discount-right
	position absolute
	color: white
	text-align center
	

.discount-left
	background-color #9933cc
	left 0px
	top 10px
	height 35px
	width 90px
	z-index 10
	line-height 35px
	font-size 1.1em

.discount-right
	right 0px
	width 70%
	height 100%
	line-height 50px
	vertical-align middle
	font-size 1.8em
	font-weight 200
	border 2px solid #fff

.form__list
	margin: 0 auto 65px
	
	 
.form__select
	margin: 0 auto 65px




.checkbox
	display flex
	cursor pointer
	justify-content space-around
	align-items center
	margin-bottom 10px
	min-width 200px
	background-color: #19a2c3
	height 40px
	transition .2s all 
	border 2px solid #ccc
	border-radius 5px
	&:hover
		border 2px solid #fff
		background-color: #19c38f

.checkbox.checked
	background-color #19c38f
	border: 2px solid #fff
	&:hover
		background-color: #149c72


.checkbox__icon
	display none
	width 30px
	height 30px
	background-color #eee
	margin-right 10px
	margin-left -10px


.form__vk
	display flex
	justify-content flex-start
	align-items: flex-start
	flex-direction column
	width 60%
	margin 0 auto
	transition opacity .3s
	opacity 0
	position absolute
	top 200px
	left 20%
	.form__label
		font-size 1em
		margin-bottom 10px
		margin-top: 20px
	&.visible
		opacity 1


.container-result
	display: flex
	flex-flow: column wrap
	


.form__result-item
	cursor: help
.form__result__list
	list-style: none
	padding-left: 0

.result__list__item
	padding-left: 10px
	color: #ccc
	cursor: help



.result
	display block
	width 100%
	margin 100px auto 0
	font-family 'Open Sans', sans-serif

.result__item
	display flex
	flex-direction row
	justify-content space-between
	margin 5px 0
	padding 10px 10px 10px 30px
	color #fff
	border-bottom 1px solid #fff

.result__item__name
	font-size 14px
	width: 20%	

.result__item__value
	font-weight 600
	cursor textedit	
	
	&:hover
		cursor textedit	
		
			
.input
	font-size 18px
	text-align center
	color #fff
	border-radius 2px
	border 2px solid #fff
	cursor textedit
	background-color #0f6175
	&:hover
		cursor textedit	
				
	&--disabled
		color #ffffff
		background-color transparent
		cursor textedit
		&:hover
			cursor textedit	


