#promo-4_label
	margin-top: 250px

.label20
	font-size: 17px
	position: absolute
	left: 8%
	top: 25%

.timeline-container
	width: 100%
	display: flex
	justify-content: center
	align-items: center
	margin-bottom: 0px
	cursor: default
	position: absolute
	bottom: 20%
.timeline
	width: 200px
	height: 30px
	text-align: center
	cursor: default
	display: flex
	flex-direction: row
	justify-content: space-between
	align-items: center


.timeline__item
	width: 1px
	height: 1px
	border-radius: 50%
	background-color: #fafafa
	opacity: 0.5	
	display: inline-block	
	line-height: 30px
	transition: all ease 0.2s
	cursor: pointer
	padding: 4px
	&--active
		opacity: 1



.form__label--moved
	position: absolute
	font-size: 12px
	top: 0px
	left: 7.5%


@media screen and (max-height: 820px) 
	.form__discount
		margin-bottom: 20px



.form__cycle
	height: 100%
	width: 10%	
	position: absolute
	top: 0
	cursor: pointer
	opacity: .3
	color: #ccc
	transition: .2s all ease
	color: red
	
	&--left
		left: 0
		background: url(back.svg)
		background-size: 30px 30px
		background-repeat no-repeat
		background-position: 40% 50%

	&--right
		right: 0
		background: url(next.svg)
		background-size: 30px 30px
		background-repeat no-repeat
		background-position: 60% 50%
	&:hover
		opacity: 1
		


.btn-sendform
	margin: 10px auto
	display: block

.btn--red
	&:hover
		background-color: red
